  author = {Davis, M. and Efstathiou, G. and Frenk, C. S. and White, S. D. M.},
  month = may,
  year = {1985},
  keywords = {Astronomical Models,Computational Astrophysics,Computerized Simulation,Correlation,Cosmology,Galactic Clusters,Galactic Evolution,Many Body Problem,Mass Distribution,Mass To Light Ratios,Matter (Physics),Missing Mass (Astrophysics),Radial Velocity,Red Shift,Weak Interactions (Field Theory)},
  pages = {371-394}
}

